<!-- <div class="page-title"><h1> Create Your Pot</h1></div> -->
<div class="wrapper create">
  <h1 style="text-align: center; margin-top: 100px;">
    Create a Cuppa Date
  </h1>
  <div id="scroll" class="demo">
    <a href="#beans"><span></span></a>
  </div>
</div>

<div class="wrapper-white" id="beans">
  <div id="friends-select">
    <h3>
      Select your Friends
    </h3>
    <div role="group" aria-label="Image Option Buttons">
      <div class="button-blue" id="all_select" style="text-decoration: none;">
        <a href="#" id="toggleAll" data-toggle="button" aria-pressed="false" autocomplete="off" >
          Select All Friends
        </a>
      </div>
    </div>

    <div class="friend-select">
      <%= simple_form_for [:dashboard, @pot] do |form| %>
      <%= select_tag "friend_ids[]", options_for_select(@friends.map { |friend| [friend.username, friend.id, "data-img-src" => friend.photo.url] }), multiple: true, class: "js-pot--friends-picker" %>
      <select multiple='multiple' class='image-picker show-labels show-html hide' name='imageList'>
      </select>
    </div>
  </div>
  <div id="scroll">
    <a href="#where"><span></span></a>
  </div>
</div>

<div class="wrapper" id="where">
  <div id="location-select">
    <h3>
      Choose a Cafe
    </h3>
    <%= form.association :location, as: :hidden %>
    <div id="map" style="width: 75%; height: 550px; margin-top: 20px; margin-right: auto; margin-left: auto; "></div>
    <% content_for(:after_js) do %>
    <%= javascript_tag do %>
    $(document).on('ready', function() {
    handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map' }, provider: { styles: [{"stylers":[{"hue":"#2c3e50"},{"saturation":250}]},{"featureType":"road","elementType":"geometry","stylers":[{"lightness":50},{"visibility":"simplified"}]},{"featureType":"road","elementType":"labels","stylers":[{"visibility":"off"}]}, {
    "featureType": "water",
    "elementType": "geometry.fill",
    "stylers": [
    {
    "color": "#AFD2FF"
  }
  ]
}] } }, function(){
markers = handler.addMarkers(<%= raw @markers.to_json %>);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
});
})
<% end %>
<% end %>
<div class="location-text">
  <h4>
    Your location is <span class="js-pot--selected-location">not selected yet</span>
  </h4>
</div>
</div>
</div>

<div class="wrapper-white" id="when">
  <div class="time-select-wrapper">
    <div id="time-select" style="margin-top: 60px;">
      <h3>
        Pick a date ..
      </h3>
      <div style="margin-left:auto; margin-right:auto;">
        <%= form.input :datestring, input_html: { class: "daterange" } %>
      </div>
    </div>
    <div id="time-select" style="margin-top: 60px;">
      <h3>
        .. and select the time(s)!
      </h3>
      <%= form.input :time_10 %>
      <%= form.input :time_12 %>
      <%= form.input :time_2 %>
      <%= form.input :time_4 %>
      <%= form.input :time_6 %>
    </div>
  </div>
  <div id="time-select" style="margin-top: 60px;">
    <div class="almost_ready">
      <p>
        Selected the friends you want to add to your pot? And chose a nice location? If you are sure that you are available on these dates and times, you're all set and one click away from finding that match!
      </p>
    </div>
    <%= form.submit class: "button-blue"%>
    <% end %>
  </div>
</div>




