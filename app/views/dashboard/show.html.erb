
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <%= image_tag("http://res.cloudinary.com/dvj9whqch/image/upload/v1466683687/pendingcup_uow2uf.png") %>
      <h3>
       Pending Cuppa
     </h3>
     <% unless @pots.empty? %>
     <% @pots.each do |pot| %>
     <%= pot.user_id %>
     <%= form_tag dashboard_pot_path(pot), method: :delete do %>
     <%= submit_tag("cancel") %>
     <% end %>
     <% end %>
     <% else %>


     <p>You don't have a cuppa! Make a pot!</p>


     <% end %>
   </div>

   <div class="col-xs-12 col-sm-4">
     <%= image_tag("http://res.cloudinary.com/dvj9whqch/image/upload/v1466761054/confirmcup_ffpgfm.png") %>
     <h3>
      Your Cuppa Date
    </h3>
    <% unless @cups.empty? %>
    <% @cups.each do |cup| %>
    <%= cup.date %>
    <%= form_tag dashboard_pot_path(cup), method: :delete do %>
    <%= submit_tag("cancel") %>
    <% end %>
    <% end %>
    <% else %>


    <p>You don't have a cuppa! Make some!</p>


    <% end %>

  </div>

  <div class="col-xs-12 col-sm-4">
    <%= image_tag("http://res.cloudinary.com/dvj9whqch/image/upload/v1466683670/cancelcup_nzlrxh.png") %>

    <h3>
      Canceled Cuppa
    </h3>

  </div>

  <div class="row">
    <div class="col-xs-3">
      <div class="white-container">

        <h3>
         Your pending request
       </h3>
       <% @user.pending_invited.each do |pending| %>
       <%= pending.email %>
       <%= form_tag friend_path(pending), method: :delete do %>
       <%= submit_tag("cancel") %>
       <% end %>
       <% end %>

       <h3>
        Friends' pending request
      </h3>
      <% @user.pending_invited_by.each do |pending|  %>
      <%= pending.email %>
      <%= form_tag friend_path(pending), method: :patch do %>
      <%= submit_tag "Approve friend" %>
      <% end %>
      <% end %>
    </div>

    <br>
    <div class="button-blue text-center">
      <%= link_to("View Friends", friends_url, class: "profile-link") %>
    </div>

    <div class="button-blue text-center">
      <%= link_to("Edit Profile", edit_user_registration_url, class: "profile-link") %>
    </div>


  </div>
</div>
</div>


