<div class="friendship-title">
	<h3>
		Your Bean Friends
	</h3>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-12" class="friend">
			<% @friends.each do |friend| %>
			<%= friend.username %>
			<%= image_tag("friend.photo.url") %>
			<%= form_tag friend_path(friend), data: {confirm: "Are you sure?"},  method: :delete do %>
			<%= submit_tag("delete") %>
			<% end %>
			<% end %>
		</div>
	</div>
</div>

