<div class="friendship-title">
	<h3>
		Your Bean Friends
	</h3>
  <%= link_to "Back to dashboard", :back %>
	<br>
  <br>
</div>
<div class="container">
	<div class="row">
		<% @friends.each do |friend| %>
		<div class="col-offset-xs-2 col-xs-10 col-offset-sm-2 col-sm-5 col-offset-md-2 col-md-4 layout-center" id="friend">
			<%= image_tag friend.photo, class: "friend-photo" %>
			<%= form_tag friend_path(friend), data: {confirm: "Are you sure?"},  method: :delete do %>
			<%= friend.username %>
      <br>
      <%= submit_tag("delete", class: "button-blue")%>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

